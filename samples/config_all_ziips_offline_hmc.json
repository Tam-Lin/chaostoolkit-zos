{
  "version": "1.0.0",
  "title": "What happens if I run out of zIIP capacity?",
  "description": "Even if I have no zIIPs, my system should still function.",
  "tags": [
    "zos",
    "ziip"
  ],
  "steady-state-hypothesis": {
    "title": "Application responds - Dummy function",
    "probes": [
      {
        "type": "probe",
        "name": "zos-is-processing-work",
        "tolerance": true,
        "provider": {
          "type": "python",
          "module": "os.path",
          "func": "exists",
          "arguments": {
            "path": "."
          }
        }
      }
    ]
  },
  "method": [
    {
      "type": "action",
      "name": "configure_all_ziips_offline",
      "provider": {
        "type": "python",
        "module": "chaoszos.zos.actions",
        "func": "configure_processors",
        "secrets": [
          "zos_console"
        ],
        "arguments": {
          "location": "M89 S5C",
          "processor_type": "ziip",
          "status": "offline"
        }
      }
    }
  ],
  "rollbacks": [
    {
      "type": "action",
      "name": "configure_all_ziips_online",
      "provider": {
        "type": "python",
        "secrets": [
          "zos_console"
        ],
        "module": "chaoszos.zos.actions",
        "func": "configure_processors",
        "arguments": {
          "location": "M89 S5C",
          "processor_type": "ziip",
          "status": "online"
        }
      }
    }
  ],
  "secrets": {
    "zos_console": {
      "M89 S5C": {
        "method": "hmc",
        "hostname": "ioshmc3.pok.stglabs.ibm.com",
        "userid": {
          "type": "env",
          "key": "IOSHMC3_USERID"
        },
        "password": {
          "type": "env",
          "key": "IOSHMC3_PASSWORD"
        }
      }
    }
  }
}

